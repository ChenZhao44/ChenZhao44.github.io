---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Publication from "@/components/publication/Publication.astro";
// import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// publications
const MAX_PUBLICATIONS = 5;
const allPublications = await getCollection("publication");
const latestPublications = allPublications.sort(collectionDateSort).slice(0, MAX_PUBLICATIONS);

// notes
// const MAX_NOTES = 5;
// const allNotes = await getCollection("note");
// const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "Home" }}>
	<section class="group relative flex items-center sm:0">
		<!-- <h1 class="title mb-6">Hello World!</h1> -->
		<div class="flex flex-col items-center">
			<div class="mr-8 h-40 w-40">
				<img
					src="/profile.jpg" 
					class="h-full w-full object-cover aspect-square rounded-full"
				/>
			</div>
		</div>
		<div class="flex sm:flex-col">
			<p class="mb-4">
				Hi, I'm Chen Zhao, a Research Scientist at QuEra Computing Inc. in Boston, MA. I focus on the research of quantum error correction, quantum algorithms, and software, and I love turning theory into practice through coding. When I'm not in the lab, I am a professional yo-yo player.
			</p>
			<p>
				<SocialList />
			</p>
		</div>
	</section>
	{
		latestPublications.length > 0 && (
			<section class="mt-16">
				<h2 class="title text-accent mb-6 text-xl">
					<a href="/publications/">Publications</a>
				</h2>
				<ul class="space-y-4" role="list">
					{latestPublications.map((publication) => (
						<li>
							<Publication publication={publication} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
	<!-- {
		latestNotes.length > 0 && (
			<section class="mt-16">
				<h2 class="title text-accent mb-6 text-xl">
					<a href="/notes/">Notes</a>
				</h2>
				<ul class="space-y-4" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	} -->
	<section class="mt-16">
		<h2 class="title text-accent mb-6 text-xl"><a href="/posts/">Posts</a></h2>
		<ul class="space-y-4" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
